<h1><%= t("forecasts.new.title") %></h1>
<p><%= t("forecasts.new.prompt") %></p>

<% if @form.errors.any? %>
  <div class="flash alert">
    <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @form, scope: :forecast, url: forecast_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address, placeholder: t("forecasts.form.address_placeholder"), required: true %>
  </div>
  <%= form.submit t("forecasts.new.submit") %>
<% end %>
